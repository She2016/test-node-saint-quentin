extends layout

block content
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-header
              strong.card-title All buildings
            .card-body
              table#bootstrap-data-table.table.table-striped.table-bordered
                thead
                  tr
                    th Nom
                    th Nombre de batiment
                    th Nom de la rue
                    th Code postale
                    th Options
                tbody
                  each key in jsonData
                    tr
                      td !{key.nom}
                      td !{key.street_number}
                      td !{key.street_name}
                      td !{key.code_postal}
                      td 
                        a.btn-outline-success(href='/delete')
                          i.fa.fa-edit
                
