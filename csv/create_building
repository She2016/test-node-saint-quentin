-- Table: public.building

-- DROP TABLE public.building;

CREATE TABLE public.building
(
    id integer NOT NULL,
    type_id integer NOT NULL,
	sub_category integer NOT NULL,
	categorie character varying(100) COLLATE pg_catalog."default" NOT NULL,
    nom character varying(50) COLLATE pg_catalog."default" NOT NULL,    
    adresse character varying(50) COLLATE pg_catalog."default" NOT NULL,
    code_postal integer NOT NULL,
    ville character varying(50) COLLATE pg_catalog."default" NOT NULL,
    usage_principale text COLLATE pg_catalog."default",
    date_de_construction text COLLATE pg_catalog."default",
    nombre_de_batiment text COLLATE pg_catalog."default",
    nombre_de_niveaux text COLLATE pg_catalog."default",
	surface_totale character varying(50) COLLATE pg_catalog."default",
    compacite text COLLATE pg_catalog."default",
    periode_de_occupation_des_locaux text COLLATE pg_catalog."default",
    hauteur_sous_plafond_moyenne text COLLATE pg_catalog."default",
    zone_climatique character varying(50) COLLATE pg_catalog."default",
    temp_exterieure_de_base integer,
    orientation_principale text COLLATE pg_catalog."default",    
    detail_des_surfaces text COLLATE pg_catalog."default",
    chauffage text COLLATE pg_catalog."default",
    ecs text COLLATE pg_catalog."default",
    renouvellement_d_air text COLLATE pg_catalog."default",
	remarques text COLLATE pg_catalog."default",
    plan character varying(100) COLLATE pg_catalog."default",
    image character varying(100) COLLATE pg_catalog."default",    
	lat numeric,
    lon numeric,
    
    CONSTRAINT building_pkey PRIMARY KEY (id)
)
WITH (
    OIDS = TRUE
)
TABLESPACE pg_default;

ALTER TABLE public.building
    OWNER to postgres;

-- Index: building_type_id_idx

-- DROP INDEX public.building_type_id_idx;
